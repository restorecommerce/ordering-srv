{
  "name": "@restorecommerce/ordering-srv",
  "version": "0.0.6",
  "description": "Restore Commerce microservice for managing orders",
  "main": "./lib/index.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/ordering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "ordering",
    "srv"
  ],
  "dependencies": {
    "@grpc/grpc-js": "^1.6.7",
    "@grpc/proto-loader": "^0.6.13",
    "@restorecommerce/cart": "^1.0.1",
    "@restorecommerce/chassis-srv": "^1.2.4",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.0.1",
    "@restorecommerce/kafka-client": "^1.0.8",
    "@restorecommerce/logger": "^1.2.3",
    "@restorecommerce/rc-grpc-clients": "^3.1.0",
    "@restorecommerce/resource-base-interface": "^1.2.3",
    "@restorecommerce/service-config": "^1.0.4",
    "lodash": "^4.17.21",
    "nice-grpc": "^2.1.4",
    "redis": "^3.1.2"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.0.21",
    "@types/ioredis": "^4.27.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.25.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.156.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:tsc",
    "build:clean": "rimraf lib",
    "build:tsc": "tsc -d",
    "createtopics": "node setupTopics.js io.restorecommerce.orders.resource io.restorecommerce.command",
    "createtopics:test": "npm run createtopics && node setupTopics.js io.restorecommerce.fulfillment.resource",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' ./src/start.ts",
    "lcov-report": "nyc report --reporter=lcov",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test node_modules/.bin/mocha --full-trace --exit",
    "start": "npm run createtopics && node lib/start.js",
    "test": "nyc npm run mocha",
    "test-debug": "mocha -R spec ./test/*.js --inspect-brk",
    "tsctests": "tsc -d -p tsconfig.test.json"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
