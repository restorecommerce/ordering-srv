{
  "name": "@restorecommerce/ordering-srv",
  "version": "0.0.15",
  "description": "Restore Commerce microservice for managing orders",
  "main": "./lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/ordering-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "ordering",
    "srv"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/acs-client": "^1.4.11",
    "@restorecommerce/chassis-srv": "^1.4.7",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.1.1",
    "@restorecommerce/kafka-client": "^1.1.19",
    "@restorecommerce/logger": "^1.2.9",
    "@restorecommerce/rc-grpc-clients": "^5.1.19",
    "@restorecommerce/resource-base-interface": "^1.4.5",
    "@restorecommerce/service-config": "^1.0.11",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.1.9",
    "@grpc/proto-loader": "^0.7.10",
    "@restorecommerce/dev": "^0.0.7",
    "@types/ioredis": "^5.0.0",
    "@types/mocha": "^10.0.6",
    "@types/nconf": "^0.10.6",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "async-mutex": "^0.4.1",
    "c8": "^9.1.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "eslint-plugin-prefer-arrow-functions": "^3.2.4",
    "mocha": "^10.3.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "ts-proto": "^1.167.8",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "@grpc/grpc-js": "^1.9.11"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "test": "npm run lint && c8 --reporter=text npm run mocha",
    "lcov-report": "c8 report --reporter=lcov",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --full-trace --exit --trace-warnings --exit",
    "test-debug": "cross-env NODE_ENV=test mocha --full-trace --exit --trace-warnings --exit --inspect-brk",
    "build:es": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --minify --tree-shaking=true --sourcemap=inline",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:es"
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
